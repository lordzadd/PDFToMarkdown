{
  "name": "my-v0-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:local": "sh -c 'PORT=${FASTAPI_PORT:-8014}; API=${FASTAPI_BASE_URL:-http://127.0.0.1:$PORT}; concurrently -k \"FASTAPI_PORT=$PORT npm run backend:dev\" \"FASTAPI_BASE_URL=$API npm run dev\"'",
    "test:backend:smoke": "bash ./scripts/backend-smoke-test.sh",
    "test:electron:buttons": "node ./scripts/electron-button-audit.js",
    "test:desktop:full": "bash ./scripts/desktop-doctor.sh",
    "test:web:smoke": "bash ./scripts/playwright-web-smoke.sh",
    "test:web:e2e": "bash ./scripts/cleanup-test-processes.sh && env -u NO_COLOR /usr/bin/arch -arm64 playwright test --config=playwright.config.ts",
    "test:web:e2e:headed": "bash ./scripts/cleanup-test-processes.sh && env -u NO_COLOR /usr/bin/arch -arm64 playwright test --config=playwright.config.ts --headed",
    "build": "next build",
    "backend:dev": "bash ./scripts/start-backend-dev.sh",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "bash ./scripts/start-electron-dev.sh",
    "electron:icons": "bash ./scripts/generate-electron-icons.sh",
    "electron:build": "npm run electron:icons && next build && electron-builder --mac --arm64 --publish never",
    "electron:dist": "npm run electron:icons && next build && electron-builder --mac dmg zip --arm64 --publish never",
    "electron:start": "bash ./scripts/start-electron-dev.sh",
    "server": "node electron/server.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@huggingface/inference": "^3.7.1",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-context-menu": "^2.1.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-menubar": "^1.0.4",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "autoprefixer": "^10.4.17",
    "axios": "^1.8.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^0.2.1",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dotenv": "^16.5.0",
    "embla-carousel-react": "^8.0.0",
    "express": "^5.1.0",
    "input-otp": "^1.0.1",
    "lucide-react": "^0.350.0",
    "mathjax-node": "^2.1.1",
    "multer": "^1.4.5-lts.2",
    "next": "^14.1.0",
    "next-themes": "^0.2.1",
    "openai": "^4.94.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "react": "^18.2.0",
    "react-day-picker": "^8.10.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.0",
    "react-resizable-panels": "^2.0.9",
    "recharts": "^2.12.0",
    "sharp": "^0.34.1",
    "sonner": "^1.4.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^0.9.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.11.0",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "concurrently": "^9.1.2",
    "electron": "^29.1.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.tingyun.snippingtool",
    "productName": "Tingyun Snipping Tool",
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "app/**/*",
      "components/**/*",
      "hooks/**/*",
      "lib/**/*",
      "styles/**/*",
      "types/**/*",
      "package.json",
      "next.config.js",
      "next.config.mjs"
    ],
    "asar": true,
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend"
      },
      {
        "from": "../Scripts",
        "to": "Scripts"
      }
    ],
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icons/512x512.png"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": ""
}
